<%= content_for :scripts do %>
  <%= subscribe_to '/exchanges/new' %>
  <script>
    <% unless Exchange.count.zero? %>
      // Area Chart
      Morris.Area({
          element: 'morris-area-chart',
          data: [
            <% Exchange.each_by_month do |date, exchanges| %>
              {
                  period: '<%= date.year %>',
                  exchanges: <%= exchanges.count %>
              },
            <% end %>
          ],
          xkey: 'period',
          ykeys: ['exchanges'],
          labels: ['Intercambios'],
          pointSize: 2,
          hideHover: 'auto',
          resize: true
      });

      // Donut Chart
      Morris.Donut({
          element: 'morris-donut-chart',
          data: [
            <% Exchange.each_by_receiver_name do |exchange| %>
              {
                  label: '<%= exchange.reciever_name %>',
                  value: '<%= exchange.count %>'
              },
            <% end %>
          ],
          resize: true
      });

      // Bar Chart
      Morris.Bar({
          element: 'morris-bar-chart',
          data: [
          <% Exchange.each_by_user_name do |exchange| %>
            {
                user_name: '<%= exchange.user_name %>',
                exchanges: <%= exchange.count %>
            },
          <% end %>
          ],
          xkey: 'user_name',
          ykeys: ['exchanges'],
          labels: ['Intercambios'],
          barRatio: 0.4,
          xLabelAngle: 35,
          hideHover: 'auto',
          resize: true
      });
    <% end %>
  </script>
<% end %>